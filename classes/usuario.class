	function GetByCodigo($login)
	{
		if(is_numeric($login) && $login < 1000000)
		{
			return $this->dbsigaedu->Query("SELECT p.id, p.nome, p.id FROM pessoa_fisica p, aluno a WHERE a.pessoa_fisica_id = $login and
											a.pessoa_fisica_id = p.id")->result;
		}
		else
		{
			$sql = new sql('u.login, p.nome, u.idusuario','cm_usuario u, cm_pessoa p',' (u.idpessoa = p.idpessoa) and (u.login = ?)');
			
			$query = $this->Query($sql,$login);

			return $query->result;
		}
	
	}

	function GetByLogin($login)
	{
		if(is_numeric($login) && $login < 1000000)
		{
			return $this->dbsigaedu->Query("SELECT 
					pessoa_fisica.id as idpessoa,
					pessoa_fisica.nome as nome,
					(
						SELECT 
							coalesce(cast(telefone.codigo_area as varchar),'') || coalesce(cast(telefone.numero as varchar), '')
						FROM 
							telefone 
						INNER JOIN
							pessoa_fisica_telefone ON (pessoa_fisica_telefone.telefone_id = telefone.id) 
						INNER JOIN
							tipo_telefone ON (tipo_telefone.id = telefone.tipo_telefone_id) 
						WHERE
							pessoa_fisica_telefone.pessoa_fisica_id = pessoa_fisica.id AND tipo_telefone.descricao = 'Residencial' LIMIT 1
					) AS telefone,
					(
						SELECT
							coalesce(cast(telefone.codigo_area as varchar),'') || coalesce(cast(telefone.numero as varchar), '') 
						FROM
							telefone 
						INNER JOIN
							pessoa_fisica_telefone ON (pessoa_fisica_telefone.telefone_id = telefone.id) 
						INNER JOIN
							tipo_telefone ON (tipo_telefone.id = telefone.tipo_telefone_id) 
						WHERE
							pessoa_fisica_telefone.pessoa_fisica_id = pessoa_fisica.id AND tipo_telefone.descricao = 'Celular' LIMIT 1
					) AS celular
					FROM
					aluno 
					INNER JOIN
						pessoa_fisica ON (pessoa_fisica.id = aluno.pessoa_fisica_id) 
					GROUP BY
						pessoa_fisica.id, pessoa_fisica.nome
					HAVING
						pessoa_fisica.id = $login")->result;
		}
		else
		{
			$sql = new sql('u.idusuario, p.nome, p.telefone, p.celular','cm_usuario u, cm_pessoa p',' (u.idpessoa = p.idpessoa) and (u.login = ?)');
			
			$query = $this->Query($sql,$login);

			return $query->result;
		}
	
	}
	
