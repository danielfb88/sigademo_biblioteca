class BusinessBibliotecaHistorico extends Business
{

 
	function BusinessBibliotecaHistorico($data = null)
	{
      $this->Business('sigaept', $data);
	}

    function GetIdOperacao($mnemonico)
	{
		$sql = new sql('idoperacao','bt_operacao','mnemonico= ?');
		$query = $this->Query($sql,$mnemonico);
		//var_dump($sql->select($mnemonico));
		return $query;
	}
   
    function ListaHistoricoUsuario($idusuario)
	{	
		$query = $this->GetIdOperacao('EMPRESTIMO');
		//var_dump($query->result);
		$idoperacaoemprestimo = $query->result[0][0];
		$query = $this->GetIdOperacao('DEVOLUCAO');
		$idoperacaodevolucao = $query->result[0][0];;
		$sql = new sql('x.numerodotombo,o.titulo,'. $this->_db->TimestampToChar('e.datahoradoemprestimo').'as datahoradoemprestimo,'. $this->_db->TimestampToChar('e.datahoraprevisaodevolucao').'as datahoraprevisaodevolucao,'. $this->_db->TimestampToChar('e.datahoradadevolucao').'as datahoradadevolucao,p1.idusuario, p2.idusuario','bt_emprestimo e, bt_exemplar x, bt_obra o, bt_logoperacao p1, bt_logoperacao p2','e.idusuario = ? AND e.idexemplar = x.idexemplar AND o.idobra = x.idobra AND p1.idoperacao = '.$idoperacaoemprestimo.' AND p2.idoperacao = '.$idoperacaodevolucao.'');
		
		
		
		$query = $this->Query($sql,$idusuario);
		//var_dump($sql->select($idusuario));
		return $query;
	}
	
	function ListaHistoricoExemplar($numerodotombo)
	{	
		$query = $this->GetIdOperacao('EMPRESTIMO');
		//var_dump($query->result);
		$idoperacaoemprestimo = $query->result[0][0];
		$query = $this->GetIdOperacao('DEVOLUCAO');
		$idoperacaodevolucao = $query->result[0][0];;
		$sql = new sql('e.idusuario,o.titulo,'. $this->_db->TimestampToChar('e.datahoradoemprestimo').'as datahoradoemprestimo,'. $this->_db->TimestampToChar('e.datahoraprevisaodevolucao').'as datahoraprevisaodevolucao,'. $this->_db->TimestampToChar('e.datahoradadevolucao').'as datahoradadevolucao,p1.idusuario, p2.idusuario','bt_emprestimo e, bt_exemplar x, bt_obra o, bt_logoperacao p1, bt_logoperacao p2','x.idexemplar = ? AND e.idexemplar = x.idexemplar AND o.idobra = x.idobra AND p1.idoperacao = '.$idoperacaoemprestimo.' AND p2.idoperacao = '.$idoperacaodevolucao.'');
		
		$query = $this->Query($sql,$numerodotombo);
		return $query;
	}
}
