<?php
/**
* @package SIGA
* @subpackage Biblioteca
* @author SETEC/MEC
*/

class BusinessBibliotecaDireito extends Business
{

	var $iddireito;
	var $descricao;

	function BusinessBibliotecaDireito($data = null)
	{
       $this->Business('sigaept', $data);
	}

	function GetData()
	{
		$data = new FormData();
		$data->idgrupo = $this->idgrupo;
		$data->descricao = $this->descricao;
		$data->idoperacao = $this->idoperacao;
		$data->idregracirculacao = $this->idregracirculacao;
		return $data;
	}

	function SetData($data)
	{
		$this->idgrupo = $data->idgrupo;
		$this->descricao = $data->descricao;
		$this->idoperacao = $data->idoperacao;
		$this->idregracirculacao = $data->idregracirculacao;
	}

	function GetByCodigo($idgrupo)
	{
		$sql = new sql('idgrupo,descricao','bt_grupo','idgrupo= ?');
	
		$query = $this->Query($sql,$idgrupo);

		if ( !$query->eof() )
			$this->SetData($query->GetRowObject());

    	return $this;
	}

	// usando quando vem do grid e tem que preencher os selections
	function GetAllByCodigo($item)
	{
		// $item é um array ! 
		// var_dump($item)

		$sql = new sql('d.idgrupo,g.descricao,d.idoperacao,d.idregracirculacao','bt_grupo g,bt_direito d','d.idgrupo= ? and d.idoperacao=? and d.idregracirculacao=? and d.idgrupo=g.idgrupo');
	
		
		$query = $this->Query($sql,$item);

		if ( !$query->eof() )
			$this->SetData($query->GetRowObject());
		
    	return $this;
	}

	function ListDireito($idgrupo)
	{
   		$sql = new sql('d.idgrupo ||\'@\'|| d.idoperacao ||\'@\'|| d.idregracirculacao,o.descricao as operacao,r.descricao as regracirculacao','bt_direito d,bt_regracirculacao r, bt_operacao o','idgrupo=? and d.idregracirculacao=r.idregracirculacao and d.idoperacao=o.idoperacao');
		$query = $this->Query($sql,$idgrupo);
        return $query;
	}
	
	


	function ListOperacao()
	{
        $sql = new sql('idoperacao,descricao','bt_operacao');
        $query = $this->Query($sql);
        return $query;
	}

	function ListRegraCirculacao()
	{
        $sql = new sql('idregracirculacao,descricao','bt_regracirculacao');
        $query = $this->Query($sql);
        return $query;
	}

	function Update($data)
	{
		
		$sql = new sql('idgrupo,idoperacao,idregracirculacao','bt_direito','idgrupo = ? and idoperacao= ? and idregracirculacao = ?');
		
		// values é um array com cada campo do primeiro parametro do sql mais os 
		// parâmetros do where 
		$values = array($data->idgrupo,$data->idoperacao,$data->idregracirculacao,$data->idgrupo,$data->hidoperacao,
		                        $data->hidregracirculacao);

		$ok = $this->Execute($sql->Update($values));


	return $ok;

	}

	
	function Insert($data)
	{
	
		$sql = new sql('idgrupo,idoperacao,idregracirculacao','bt_direito');

		$values = array($data->idgrupo,$data->idoperacao,$data->idregracirculacao);
		
		$ok = $this->Execute($sql->Insert($values));
	    if($ok){$ok = $data->idgrupo.'-'.$data->idoperacao.'-'.$data->idregracirculacao;}
   	return $ok;
	}

	
	function Delete($data)
	{
		
		$sql = new sql('','bt_direito','idgrupo = ? and idoperacao = ? and idregracirculacao = ?');

		$dados = array ($data->idgrupo, $data->idoperacao, $data->idregracirculacao);
		
		$ok = $this->Execute($sql->delete($dados));

    	return $ok;

	}

}
