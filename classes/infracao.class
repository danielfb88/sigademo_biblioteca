<?php
/**
* @package SIGA
* @subpackage Biblioteca
* @author SETEC/MEC
*/

class BusinessBibliotecaInfracao extends Business
{

	var $idinfracao;
	var $descricao;

	function BusinessBibliotecaInfracao($data = null)
	{
       $this->Business('sigaept', $data);
	}

	function GetData()
	{
		$data = new FormData();
		$data->idinfracao = $this->idinfracao;
		$data->descricao = $this->descricao;
		return $data;
	}


	function SetData($data)
	{
		$this->idinfracao = $data->idinfracao;
		$this->descricao = $data->descricao;
	}

	function GetByCodigo($idinfracao)
	{

		$sql = new sql('idinfracao,descricao','bt_infracao','idinfracao = ?');
	
		$query = $this->Query($sql,$idinfracao);

		if ( !$query->eof() )
			$this->SetData($query->GetRowObject());

	return $this;
	}

	function Update($data)
	{
		
		$sql = new sql('idinfracao,descricao','bt_infracao','idinfracao = ?');
		
		// values é um array com cada campo do primeiro parametro do sql mais os 
		// parâmetros do where 
		$values = array($data->idinfracao,$data->descricao,$data->idinfracao);
		
		//var_dump($sql->Update($values));

		$ok = $this->Execute($sql->Update($values));

	return $ok;

	}

	
	function Insert($data)
	{
		
		$sql = new sql('idinfracao,descricao','bt_infracao');

		$novo_codigo = $this->_db->GetNewId('seq_bt_infracao');
		
		$values = array($novo_codigo,$data->descricao);
		
		$ok = $this->Execute($sql->Insert($values));
    if($ok){$ok = $novo_codigo;}
	return $ok;

	}

	
	function Delete($data)
	{
		
		$sql = new sql('','bt_infracao','idinfracao = ?');

		$ok = $this->Execute($sql->Delete($data->idinfracao));

		return $ok;

	}

	function ListInfracao()
	{
		$sql = new sql('idinfracao,descricao','bt_infracao','','idinfracao');
        $query = $this->Query($sql);
        return $query;
	}

}
