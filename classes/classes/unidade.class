<?php
/**
* @package SIGA
* @subpackage Biblioteca
* @author SETEC/MEC
*/

class BusinessBibliotecaUnidade extends Business
{

	var $idunidade;
	var $descricao;
	var $mnemonico;

	function BusinessBibliotecaUnidade($data = null)
	{
       $this->Business('sigaept', $data);
	}

	function GetData()
	{
		$data = new FormData();
		$data->idunidade = $this->idunidade;
		$data->descricao = $this->descricao;
		$data->mnemonico = $this->mnemonico;
		return $data;
	}


	function SetData($data)
	{
		$this->idunidade = $data->idunidade;
		$this->descricao = $data->descricao;
		$this->mnemonico = $data->mnemonico;
	}

	function GetByCodigo($idunidade)
	{

		$sql = new sql('idunidade,descricao,mnemonico','bt_unidade','idunidade = ?');
	
		$query = $this->Query($sql,$idunidade);

		if ( !$query->eof() )
			$this->SetData($query->GetRowObject());

	return $this;
	}

	function Update($data)
	{
		
		$sql = new sql('idunidade,descricao,mnemonico','bt_unidade','idunidade = ?');
		
		// values é um array com cada campo do primeiro parametro do sql mais os 
		// parâmetros do where 
		$values = array($data->idunidade,$data->descricao,$data->mnemonico,$data->idunidade);
		
		//var_dump($sql->Update($values));

		//$this->BeginTransaction();
		$ok = $this->Execute($sql->Update($values));
		//$this->EndTransaction();
		

	return $ok;

	}

	
	function Insert($data)
	{
		
		$sql = new sql('idunidade,descricao,mnemonico','bt_unidade');

		$novo_codigo = $this->_db->GetNewId('seq_bt_unidade');
		
		$values = array($novo_codigo,$data->descricao,$data->mnemonico);
		
		$ok = $this->Execute($sql->Insert($values));

        if ( $ok )
        {
           $ok = $novo_codigo;
        }

	return $ok;

	}

	
	function Delete($data)
	{
		
		$sql = new sql('','bt_unidade','idunidade = ?');

		$ok = $this->Execute($sql->Delete($data->idunidade));

	return $ok;

	}

	function ListUnidade()
	{
		$sql = new sql('idunidade,descricao,mnemonico','bt_unidade','','mnemonico');
        $query = $this->Query($sql);
        return $query;
	}

	function ListDescricaoUnidade()
	{
		$sql = new sql('idunidade,descricao,mnemonico','bt_unidade','','mnemonico');
        $query = $this->Query($sql);
		for ($i=0; $i<count($query->result); $i++){
			$list[$query->result[$i][0]] = $query->result[$i][1];
		}
        return $list;
	}

	function GetIdByMnemonico($mnemonico){
		$sql = new sql('idunidade','bt_unidade','(mnemonico = ?)');
		$query = $this->Query($sql,$mnemonico);
		return $query->result[0][0];
	}
	
	function selAll()
    {
        $sql = new sql('idunidade,descricao','bt_unidade','','idunidade');
    	$query = $this->Query($sql);
        return $query;    	
    }
}
