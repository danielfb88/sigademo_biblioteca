class BusinessBibliotecaUsuarioInfracoes extends Business
{
	var $login;
	var $usuario;

	function BusinessBibliotecaUsuarioInfracoes($data = null)
	{
       $this->Business('sigaept', $data);
	}
	
	function GetData()
	{
		$data = new FormData();
		$data->usuario = $this->usuario;
		$data->idusuario = $this->idusuario;
		$data->idinfracao = $this->idinfracao;
		$data->notainfracao = $this->notainfracao;
		$data->idnotainfracao = $this->idnotainfracao;
		return $data;
	}


	function SetData($data)
	{
		$this->usuario = $data->usuario;
		$this->idusuario = $data->idusuario;
		$this->idinfracao = $data->idinfracao;
		$this->notainfracao = $data->notainfracao;
		$this->idnotainfracao = $data->idnotainfracao;
	}

	function GetByCodigo($idusuario)
	{

		$sql = new sql('idnotainfracao,idusuario,idinfracao,notainfracao','bt_notainfracao','idusuario = ?');
	
		$query = $this->Query($sql,$idusuario);

		if ( !$query->eof() )
			$this->SetData($query->GetRowObject());

		return $this;
	}

	function GetNotaInfracao($campos)
	{

		$sql = new sql('notainfracao,idinfracao','bt_notainfracao','idusuario = ? and idnotainfracao = ?');
		
		$query = $this->Query($sql,$campos);
		//var_dump($query->result[0]);

		return $query->result[0];
	
	}	

	
	function ListInfracoes()
	{

		$sql = new sql('idinfracao,descricao','bt_infracao','','idinfracao');
		
		$query = $this->Query($sql);

		return $query;
	
	}	

	function Update($data)
	{
		
		$sql = new sql('notainfracao,idinfracao','bt_notainfracao','idusuario = ? and idnotainfracao = ?');
		
		// values é um array com cada campo do primeiro parametro do sql mais os 
		// parâmetros do where 
		$values = array($data->notainfracao,$data->idinfracao,$data->idusuario,$data->idnotainfracao);
		//var_dump($values);
		//var_dump($sql->Update($values));

		$ok = $this->Execute($sql->Update($values));

	return $ok;

	}

	
	function Insert($data)
	{
		
		$this->idnotainfracao = $this->_db->GetNewId('seq_bt_notainfracao');
		$sql = new sql('idnotainfracao,idusuario,idinfracao,notainfracao','bt_notainfracao');

				
		$values = array($this->idnotainfracao,$data->idusuario,$data->idinfracao,$data->notainfracao);
		
		$ok = $this->Execute($sql->Insert($values));
		
		//var_dump($sql->Insert($values));
	    	return $ok;

	}

	
function Delete($campos)
	{
		
		$sql = new sql('','bt_notainfracao','idusuario = ? and idnotainfracao = ?');

		$ok = $this->Execute($sql->Delete($campos));

		//var_dump($sql->Delete($campos));

	return $ok;

	}

	function ListUsuarioInfracoes($idusuario)
	{
		$sql = new sql('n.idusuario||\'@\'||n.idnotainfracao,n.idinfracao,n.notainfracao,i.descricao','bt_notainfracao n, bt_infracao i','(idusuario = ?) and (n.idinfracao = i.idinfracao)','n.idnotainfracao');
		
		$query = $this->Query($sql,$idusuario);
		//var_dump($query);
		return $query;
	}

}
