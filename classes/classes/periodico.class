               $query = $this->Query($sql,$values);
               $idMaterial = $query->result[0][0];
               if($idMaterial == null)//Se não existir nada em bt_materialartigo
               {
                        $idMaterial = $this->_db->GetNewId('seq_bt_materialperiodico');
