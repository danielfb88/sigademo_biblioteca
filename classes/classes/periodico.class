      function UpdateMaterial($idPeriodico, $idEtiqueta,$ocorrencia,$subcampo,$linha,$value,$tag=null)
      {
               global $MIOLO,$module;

               $commands = array();
               // obter idMaterial, se existir
               $sql =  new sql('m.idmaterial','bt_materialperiodico m','(m.idperiodico = ?) AND (m.idetiqueta = ?)');
