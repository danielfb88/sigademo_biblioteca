class BusinessBibliotecaGenero extends Business
{

	var $idgenero;
	var $descricao;
	var $idficha;

	function BusinessBibliotecaGenero($data = null)
	{
      $this->Business('sigaept', $data);
	}

	function GetData()
	{
		$data = new FormData();
		$data->idgenero = $this->idgenero;
		$data->descricao = $this->descricao;
		$data->idficha= $this->idficha;
		return $data;
	}


	function SetData($data)
	{
		$this->idgenero = $data->idgenero;
		$this->descricao = $data->descricao;
		$this->idficha = $data->idficha;
	}
    function getIdByDescricao($descricao){
        $sql = new sql('idgenero','bt_genero'," descricao LIKE ? ");
        var_dump($descricao);
        $query = $this->Query($sql,$descricao);
        var_dump($query->result[0][0]);
        return $query->result[0][0];
    }
    
    function GetByDescricao($descricao){ // metodo adicionado para uso em periodico.class (28/04/2009)

        $sql = new sql('idgenero,descricao,idficha','bt_genero',"( upper(descricao) LIKE upper(?) )");

        $query = $this->Query($sql,$descricao);

           /*Todas as buscas pela Descricao de material de periodicos
            em outros lugares no sistema é feita pela string PERIODICO.
            Se for cadastrado o como genero a string PERIÓDICO (com acento)
           iria retornar null, então faço essa verificaçao aqui*/
            if($query->result[0][0]==null & $descricao == 'PERIODICO'){
                $query = $this->Query($sql, 'PERIÓDICO');
                //fazer para 'ARTIGO DE PERIODICO'
            }
              
            if ( !$query->eof() )
                    $this->SetData($query->GetRowObject());

            return $this;

    }
	function GetByCodigo($idgenero)
	{

		$sql = new sql('idgenero,descricao,idficha','bt_genero','idgenero = ?');
	
		$query = $this->Query($sql,$idgenero);

		if ( !$query->eof() )
			$this->SetData($query->GetRowObject());

	return $this;
	}

	function Update($data)
	{
		
		$sql = new sql('idgenero,descricao,idficha','bt_genero','idgenero = ?');
		
		// values é um array com cada campo do primeiro parametro do sql mais os 
		// parâmetros do where 
		$values = array($data->idgenero,$data->descricao,$data->idficha,$data->idgenero);
		
		$ok = $this->Execute($sql->Update($values));

	return $ok;

	}

	
	function Insert($data)
	{
		
		$sql = new sql('idgenero,descricao,idficha','bt_genero');

		$novo_codigo = $this->_db->GetNewId('seq_bt_genero');
		
		$values = array($novo_codigo,$data->descricao,$data->idficha);
		
		$ok = $this->Execute($sql->Insert($values));
    if($ok){$ok = $novo_codigo;}
    
	return $ok;

	}

	
	function Delete($data)
	{
		
		$sql = new sql('','bt_genero','idgenero = ?');

		$ok = $this->Execute($sql->Delete($data->idgenero));

	return $ok;

	}

	function ListGenero()
	{
		$sql = new sql('g.idgenero,g.descricao,f.categoria','bt_genero g,bt_ficha f', 'g.idficha=f.idficha', 'g.idgenero');
        $query = $this->Query($sql);
        return $query;
	}
	
	
	function ListGenerosExistentes()
	{
		$sql = new sql('g.idgenero,g.descricao','bt_genero g,bt_obra o', 'g.idgenero=o.idgenero', 'g.idgenero');
        $query = $this->Query($sql);
        return $query;
	}
	

	function selAll()
    {
        $sql = new sql('idgenero,descricao','bt_genero','','idgenero');
    	$query = $this->Query($sql);
        return $query;
    	//return array_combine($setores,$setores);
    }
}
