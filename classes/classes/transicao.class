<?php
/**
* @package SIGA
* @subpackage Biblioteca
* @author SETEC/MEC
*/

class BusinessBibliotecaTransicao extends Business
{

	var $idtransicao;
	var $descricao;
	var $mnemonico;

	function BusinessBibliotecaTransicao($data = null)
	{
       $this->Business('sigaept', $data);
	}

	function GetData()
	{
		$data = new FormData();
		$data->idtransicao = $this->idtransicao;
		$data->descricao = $this->descricao;
		$data->mnemonico = $this->mnemonico;
		$data->key = $this->idtransicao;

		return $data;
	}


	function SetData($data)
	{
		$this->idtransicao = $data->idtransicao;
		$this->descricao = $data->descricao;
		$this->mnemonico = $data->mnemonico;
	}

	function GetByCodigo($idtransicao)
	{

		$sql = new sql('idtransicao,descricao,mnemonico','bt_transicao','idtransicao = ?');
	
		$query = $this->Query($sql,$idtransicao);

		if ( !$query->eof() )
			$this->SetData($query->GetRowObject());

	return $this;
	}

	function Update($data)
	{
		
		$sql = new sql('idtransicao,descricao,mnemonico','bt_transicao','idtransicao = ?');
		
		// values é um array com cada campo do primeiro parametro do sql mais os 
		// parâmetros do where 
		$values = array($data->idtransicao,$data->descricao,$data->mnemonico,$data->key);
		
		//var_dump($sql->Update($values));

		$ok = $this->Execute($sql->Update($values));

	return $ok;

	}

	
	function Insert($data)
	{
		
		$sql = new sql('idtransicao,descricao,mnemonico','bt_transicao');

		//$novo_codigo = $this->_db->GetNewId('seq_gtc_transicao');
		
		$values = array($data->idtransicao,$data->descricao,$data->mnemonico);
		
		$ok = $this->Execute($sql->Insert($values));

	return $ok;

	}

	
	function Delete($data)
	{
		
		$sql = new sql('','bt_transicao','idtransicao = ?');

		$ok = $this->Execute($sql->Delete($data->key));

	return $ok;

	}

	function ListTransicao()
	{
		$sql = new sql('e.descricao as estadopresente,o.descricao as operacao,e2.descricao as estadofuturo','bt_transicao t, bt_estado e, bt_estado e2, bt_operacao o','t.idestadopresente=e.idestado and t.idestadofuturo=e2.idestado and t.idoperacao = o.idoperacao');
        $query = $this->Query($sql);
        return $query;
	}

}
?>
