<?php
/**
* @package SIGA
* @subpackage Biblioteca
* @author SETEC/MEC
*/

class BusinessBibliotecaColecao extends Business
{

	var $idcolecao;
	var $descricao;
	var $mnemonico;

	function BusinessBibliotecaColecao($data = null)
	{
       $this->Business('sigaept', $data);
	}

	function GetData()
	{
		$data = new FormData();
		$data->idcolecao = $this->idcolecao;
		$data->descricao = $this->descricao;
		$data->mnemonico = $this->mnemonico;
		return $data;
	}


	function SetData($data)
	{
		$this->idcolecao = $data->idcolecao;
		$this->descricao = $data->descricao;
		$this->mnemonico = $data->mnemonico;
	}

	function GetByCodigo($idcolecao)
	{

		$sql = new sql('idcolecao,descricao,mnemonico','bt_colecao','idcolecao = ?');
	
		$query = $this->Query($sql,$idcolecao);

		if ( !$query->eof() )
			$this->SetData($query->GetRowObject());

	return $this;
	}

	function Update($data)
	{
		
		$sql = new sql('idcolecao,descricao,mnemonico','bt_colecao','idcolecao = ?');
		
		// values é um array com cada campo do primeiro parametro do sql mais os 
		// parâmetros do where 
		$values = array($data->idcolecao,$data->descricao,$data->mnemonico,$data->idcolecao);
		
		//var_dump($sql->Update($values));

		$ok = $this->Execute($sql->Update($values));

	return $ok;

	}

	
	function Insert($data)
	{
		
		$sql = new sql('idcolecao,descricao,mnemonico','bt_colecao');

		$novo_codigo = $this->_db->GetNewId('seq_bt_colecao');
		
		$values = array($novo_codigo,$data->descricao,$data->mnemonico);
		
		$ok = $this->Execute($sql->Insert($values));
		if($ok){$ok = $novo_codigo;}

	return $ok;

	}

	
	function Delete($data)
	{
		
		$sql = new sql('','bt_colecao','idcolecao = ?');
		$idcolecao = $data->idcolecao;
		$ok = $this->Execute($sql->Delete($idcolecao));

	return $ok;

	}

	function ListColecao()
	{
		$sql = new sql('idcolecao,mnemonico,descricao','bt_colecao','','mnemonico');
        $query = $this->Query($sql);
        return $query;
	}

	function GetIdByMnemonico($mnemonico){
		$sql = new sql('idcolecao','bt_colecao','(mnemonico = ?)');
		$query = $this->Query($sql,$mnemonico);
		return $query->result[0][0];
	}
}
?>
