<?php
/**
* @package SIGA
* @subpackage Biblioteca 

* @author SETEC/MEC
*/

class frmCatalogacaoFichaPrincipal extends MForm
{
    private $idObra;
    private $objObra;
    private $objGenero;

    function __construct($idObra)
    {
        parent::__construct('Controles');
        $this->EventHandler();
        $this->idObra = $idObra;
        // Botão 'fechar', direcionando para o handler biblioteca/main/catalogacao
        $this->SetClose($this->manager->GetActionURL($module, 'main:catalogacao'));
    }

    function CreateFields()
    {
        global $MIOLO, $module,$item;
        $this->objGenero = $MIOLO->GetBusiness($module,'genero');
        $opG = $this->objGenero->ListGenero();
        foreach($opG->result as $o)
        {
            $optionsG[$o[0]] = $o[1];
        }        
        $fields = array(
                        new MTextField('txtAcervo','','Acervo',10),                
                        new Selection('selGenero','','Tipos de Obra'),
        ); 
        $this->SetFields($fields);
        $this->SetFieldAttr('selGenero','options', $optionsG);

        $buttons = array(
                        new FormButton('btnEnviarAcervo', 'Cad. Acervo'),
                        new FormButton('btnConsulta','Consulta Topográfico'),
                        new FormButton('btnLimpar','Limpar'),
                        new FormButton('btnHistorico','Histórico'),
                        new FormButton('btnVinculos','Vínculos'),
                        new FormButton('btnIncompletos','Incompletos')
        );
        $this->SetButtons($buttons);
        if($item!= null){
            $obra = $this->manager->getBusiness('biblioteca','obra', $item);
            $this->SetFieldValue('txtAcervo',$obra->numeroDaObra);
            $this->SetFieldValue('selGenero',$obra->idGenero);
            $this->SetFieldAttr('txtAcervo','readonly',true);
            $this->SetButtonAttr('btnEnviarAcervo','visible',false);
        }
        else{
            session_start("camposMarc");
            $_SESSION["camposMarc"] = array();      
        }
    }
   
    function btnEnviarAcervo_click(){
        global $MIOLO,$item,$module,$action;;
        $this->objObra = $MIOLO->GetBusiness($module,'obra');
        $acervo = $this->GetFieldValue('txtAcervo');
        $genero = $this->GetFieldValue('selGenero');
        if($acervo){
             $obra = $this->objObra->GetByNumero($acervo);
             if($obra->idObra){
                $item = $obra->idObra;
                $msg = "Obra " . $obra->numeroDaObra . " encontrada no acervo. Deseja recatalogá-la ? ";
                $MIOLO->Prompt(Prompt::Question($msg,$MIOLO->GetActionURL($module,'main:catalogacao:catalogacaoPergamum', $item),$MIOLO->GetActionURL($module,'main:catalogacao')));
             }else{
                $MIOLO->Error("Não foi encontrada nenhuma obra com este número de acervo.", $MIOLO->GetActionURL($module,$action) );
             }
        }else{
            $data = new FormData();
            $data->idobra = $this->objObra->GetNextIdObra();
            $data->numerodaobra = $this->objObra->GetNextNumeroObra();
            $data->keygenero = $genero;
            //já grava o 008 na pré-catalogação
            $ficha008 = date('ymd') . '                 r               d';

            try
            {
                $this->objObra->saveObra($data);
                $this->objObra->saveSubFicha($ficha008, '008');
                $msg = "Nova Obra " . $data->numerodaobra . " inserida com sucesso. Deseja continuar catalogacao ? ";
                $item = $data->idobra;
                $MIOLO->Prompt(Prompt::Question($msg,$MIOLO->GetActionURL($module,'main:catalogacao:catalogacaoPergamum', $item),$MIOLO->GetActionURL($module,'main:catalogacao')));
            }
            catch (Exception $e)
            {
                $this->addError($e->getMessage());
            }
        }
    }

    function btnIncompletos_click(){
        
    }
    
    function btnLimpar_click(){
        global $item;
        $item = null;
        session_start("camposMarc");
        unset($_SESSION["camposMarc"]);
        $go = $this->manager->getActionURL('biblioteca','main:catalogacao:catalogacaoPergamum',$item);
        $this->page->redirect($go);
    }

}