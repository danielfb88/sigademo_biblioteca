/**
  @author Daniel Bonfim
  @since 17-04-2013
 **/
class frmRelatorioEmprestimos extends Form {

	function frmRelatorioEmprestimos() {
		global $MIOLO, $action, $module, $item;

		$this->Form("Relatório de Empréstimos");
		$this->EventHandler();
		$this->defaultButton = false;
		$this->SetClose($this->manager->GetActionURL($module, 'main:circulacao:relatorio'));
	}

	function CreateFields() {
		global $MIOLO, $action, $module, $item, $page;


		$opcoesOrdenacao = array(
				/**
				 * Numeração de acordo com ordem das colunas da query
				 * do relatório.
				 **/
				new MOption('status', 8, 'Status', true),
				new MOption('titulo', 3, 'Título', false),
				new MOption('login', 1, 'Login', false),
				new MOption('emprestimo', 6, 'Data do empréstimo', false),
				new MOption('devolucao', 7, 'Data da previsão de devolução', false),
				);


		$fields = Array (
				new MRadioButtonGroup('ordenacao', 'Ordenar Por:</br></br>', $opcoesOrdenacao, '',
					'vertical', 'css')
				);

		$this->SetFields($fields);

		$buttons = Array(			
				new FormButton('btnRelatorio', 'Gerar Relatório', 'PDF'),
				);
		$this->SetButtons($buttons);
	}	

	function btnRelatorio_click() {	
		global $MIOLO,$module;
		$coluna = (int) $this->getFormValue('ordenacao');
		//		var_dump($coluna);die;

		$parameters['int_ORDERBY'] = $coluna; 
		$report = new MJasperReport('sigaept');
		$report->Execute('biblioteca', 'emprestimos', $parameters);
	}

}
