class frmMunicipioDel extends MForm
{
	protected $obj;
    protected $objId;

    function __construct($obj)
    {
		$this->obj = $obj;
        parent::__construct('Excluir Municipio');
        $this->eventHandler();
    }

    function createFields()
    {
        global $MIOLO;

        $id = $this->obj->idMunicipio;
        $txt = $this->obj->municipio;

		$action_sim = $MIOLO->getActionURL('common','main:municipio',$id,array('form'=>'excluir','conf'=>'sim'));
		$action_nao = $MIOLO->getActionURL('common','main:municipio',$id);

		$conf = $this->getFormValue('conf');

		if ($conf == 'sim')
		{
            try
            {
    			$this->obj->delete();
	    		$MIOLO->Information('Municipio excluído com sucesso',$MIOLO->getActionURL('common','main:municipio:find'));
			}
			catch ( Exception $e )
			{
				$MIOLO->Error($e->getMessage,$MIOLO->GetActionURL('common','main:municipio',$this->id));
			}
					
	   }
	   else
	   {
		   $MIOLO->Question("Tem certeza que deseja excluir o Municipio ".$txt."?",$action_sim,$action_nao);
		}
    }
 }
?>
