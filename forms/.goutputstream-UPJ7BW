       $this->SetbuttonAttr('btnLimpar','visible',false); 
         
      //Validator
      $this->AddValidator(new IntegerValidator('edtQtdExemplar'));
      		
         //Definindo o foco
        if ( (!$this->page->isPostBack()) and ($this->GetFormValue('event') == null) )
