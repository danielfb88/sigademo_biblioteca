	// pega os dados que estão no formulário   
    function GetData()
    {
		$data = new FormData();
		$data->descricao = ucfirst(strtolower(trim($this->GetFieldValue('lkpDescricao'))));
		$data->idgenero = $this->GetFieldValue('hidKey');
		$data->idficha = $this->GetFieldValue('selFicha');
		return $data;
	}

	
	// usada para inserir valores no formulário
	function SetData($data)
	{
		$this->SetFieldValue('lkpDescricao', ucfirst(strtolower($data->descricao)));
		$this->SetFieldValue('selFicha',intval($data->idficha));
		$this->SetFieldValue('hidKey',$data->idgenero);
	}

	// Consulta: função chamada após o usuário usar o lookup
	function btnConsulta_click($sender,$idgenero)
	{ 
		global $MIOLO,$module, $item;

		//A linha abaixo verifica se existe um idgenero
		//Se nao existir, ela tenta pegar $item que é passada
		//pelo botao editar do "relação"
		$idgenero = ($idgenero != '') ? $idgenero : $item;
	
		//Instancia o objeto genero
		$this->objgenero = $MIOLO->GetBusiness($module,'genero');

		// Já considera que o usuário quer excluir,editar uma genero
		$this->SetButtonAttr('btnExcluir','visible',true);	
 		$this->SetButtonAttr('btnEnviar','label','Salvar');	

		// ok retorna os dados de idgenero
		$ok = $this->objgenero->GetByCodigo($idgenero);	

		// este é o setdata deste arquivo. não é o setdata da classe de negócios
		// veja que é $this->SetData e nao $this->objgenero->SetData
		$this->SetData($ok);	
				
	}

