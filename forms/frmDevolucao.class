	function imprimirRecibo() {
		$parameters[ 'str_NUMERODOTOMBO' ] = Form::GetFormValue('exemplar');
		$report = new MJasperReport('sigaept');
		$report->Execute('biblioteca','Ticket1_Devolucao_UI', $parameters);
	}



