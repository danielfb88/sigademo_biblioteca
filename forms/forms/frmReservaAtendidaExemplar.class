class frmReservaAtendidaExemplar extends Form
{
	var $objReserva;
	var $objExemplar;
	var $objSituacao;
	
	function __construct()
    {  
		global $MIOLO, $action;

		$this->Form('Reservas Atendidas por Exemplar');
		$this->EventHandler();
  		$this->defaultButton = false;
  		// Botão 'fechar', direcionando para o handler biblioteca/main/circulacao/reserva
		$this->SetClose($this->manager->GetActionURL($module, 'main:circulacao:reserva'));  		

	}
   
    function CreateFields()
    {
		if (! $this->page->IsPostBack()){
			// Campos que aparecem no formulário
			$fields = Array (
				new TextField('edtExemplar','','Número do Tombo',20,'',4),
				);
			$this->SetFields($fields);

			// Botões que aparecem no formulário
			$buttons = Array(
				new FormButton('btnProcurar', 'Procurar'),
	    		);
			$this->SetButtons($buttons);

			// validators
			$this->AddValidator(new RequiredValidator('edtExemplar'));
		
			//Definindo o foco
		    if (!($this->GetFieldValue('edtExemplar')))
		    {
			   $this->page->onLoad("MIOLO_GetElementById('edtExemplar').focus();");
		    }
		}
	}

	function btnProcurar_click()
	{
		global $MIOLO, $module, $self, $theme, $action, $page, $item;

		if($item==null)
			$exemplar = $this->GetFormValue('edtExemplar');
		else
			$exemplar = $item;

		$this->objExemplar = $MIOLO->GetBusiness($module,'exemplar');
		$titulo = $this->objExemplar->GetTituloByExemplar($exemplar);

		if ($titulo == null){
			$MIOLO->Error("Número do tombo não encontrado.", $MIOLO->GetActionURL($module = $module, $action = $action));
		}

		//datagrid
		$this->SetTitle(NULL);

		$columns = array(
			new DataGridColumn('idreserva','Nº Reserva','center',true, '10%',true, null, false, false),
			new DataGridColumn('login','Cód Usuário','center',true, '10%',true, null, false, false),
			new DataGridColumn('nome','Nome','left',false, '30%',true, null, false, false),
			new DataGridColumn('telefone','Telefone','center',true, '10%',true, null, false, false),
			new DataGridColumn('celular','Celular','center',true, '10%',true, null, false, false),
			new DataGridColumn('datahoradareserva','Solicitação','center',false, '10%',true, null, false, false),
			new DataGridColumn('datahoraentrada','Entrada','center',false, '10%',true, null, false, false),
			new DataGridColumn('datahoralimite','Limite','center',false, '10%',true, null, false, false),
		);

		//Instancia o objeto emprestimo
	    $this->objReserva = $MIOLO->GetBusiness($module,'reserva');

		$query = $this->objReserva->ListReservaAtendidaExemplar($exemplar);
		
		$href_datagrid = $MIOLO->GetActionURL($module,$action,$exemplar,Array('event'=>'btnProcurar_click'));
		$page->SetAction($href_datagrid);

		$datagrid = new DataGrid2($query, $columns, $href_datagrid,20);
		$datagrid->SetTitle('Reservas Atendidas - Exemplar: ' . $exemplar . ' (' . $titulo . ')');
		$datagrid->SetWidth('99%');

		$fields = array(
						$datagrid,
		);

		$this->SetFields($fields);

		$buttons = Array(
			new FormButton('btnVoltar', 'Voltar', $MIOLO->GetActionURL($module = $module, $action = $action)),
   		);
		$this->SetButtons($buttons);

	}

}
?>
