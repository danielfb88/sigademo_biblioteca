<?
class frmRelatorioCnpq extends MFormAjax
{
    protected $exemplar;	
    function __construct()
    {
	global $MIOLO;
        $this->exemplar = $MIOLO->getBusiness('biblioteca','exemplar');
        parent::__construct('Obter Relatório do CNPQ');
        $this->SetClose($this->manager->GetActionURL('biblioteca','main'));
        $this->EventHandler();
    }   

    function CreateFields()
    {
        $ui = $this->manager->getUI();
	$options = array('Obras','Exemplares');

	$fields = array(new MRadioButtonGroup('opcoes', '', $options, $default = 'Obras',$hint = '', $disposition = 'vertical', $border = 'none' ));
	$this->SetFields($fields);

        $buttons = array(
            new MButton('btnReport','Gerar Relatório','PDF'),
        );
        $this->SetButtons($buttons);
    }    
    
    
    function btnReport_click()
    {
		global $MIOLO;
		
		$data=$this->GetData();
 		$tipo = $data->opcoes = $this->GetFormValue('opcoes');

		if ($tipo == 'Exemplares')
		{
			$query2=$this->exemplar->RelatorioCnpqExemplar();
		}elseif ($tipo == 'Obras')
		{
			$query2=$this->exemplar->RelatorioCnpqObra();
		}

		/** CONSULTA GÊNEROS **/
		$query1=$this->exemplar->GetGeneros();
		$res = $query1->result;
		$x = 0;
		$pos = 1;
		$genero[0] = utf8_decode('ÁREA');
		while ($res[$x] <> NULL)
		{
			$genero[$pos] = $res[$x][0];
			$x++;
			$pos++;
		}	
		$genero[$pos++]	= "TOTAL";
		/** FIM CONSULTA GÊNEROS **/

		$report = new MezPDFReport($paper = 'a4', $orientation = 'landscape');

        	$options['textCol'] = array(0,0,0);
	        $options['shaded'] = 1;
        	$options['fontSize'] = 10;
	        $options['titleFontSize'] = 12;
	        //$options['width'] = 750;

		/*$ui = $this->manager->GetUI(); 
		//$image = $ui->GetImageSrc('cabecalho.png',''); 
		$image = $ui->GetImageSrc('cnpq.png','ditex');
		$report->pdf->ezImage($image,50,50,'none','left',0);*/

		
        	$report->setFont('arial.afm');
		$hoje = date("d/m/y");   
		$report->pdf->ezText(' ');
		$report->pdf->ezText(' ');
		$report->pdf->ezText(    utf8_decode('IFBA > Instituto Federal de Educação, Ciência e Tecnologia da Bahia'),15);
		$report->pdf->ezText(    utf8_decode('SIGA > Sistema Integrado de Gestão Acadêmica'),15);
		$report->pdf->ezText(' ');
		$report->pdf->ezText(    utf8_decode('Relatório de '.$tipo.' por Áreas de Conhecimento CNPq, gerado em '.$hoje.''));
		$report->pdf->ezText(' ');
		$report->pdf->ezText(' ');

		$report->pdf->ezTable($query2,$genero,' ',$options);
		$report->pdf->ezText(' ');
		$report->pdf->ezText(' ');

        	$report->execute();
    	}
  	
} 
?>
