<?
class frmRepEmprestimoAnalitico extends MFormAjax
{
    protected $exemplar;	
    function __construct()
    {
	global $MIOLO;
        $this->exemplar = $MIOLO->getBusiness('biblioteca','exemplar');
        parent::__construct('Obter Relatório do CNPQ');
        $this->SetClose($this->manager->GetActionURL('biblioteca','main'));
        $this->EventHandler();
    }   

    function CreateFields()
    {
        $fields = Array(
			new MCalendarField('dataInicio','','Data Inicial',10,'informe a data inicial do relatório.'),
			new MCalendarField('dataFim','','Data Final',10,'informe a data final do relatório.'),
		);
		
		$this->SetFields($fields);
		$buttons = Array
		(
			new FormButton('btnGerarRelatorio', 'Gerar Relatório','pdf')
		);
		$this->SetButtons($buttons);
    }    
    
    
    function btnGerarRelatorio_click()
    {
		global $MIOLO;
		
		$dataInicio = Form::GetFormValue('dataInicio');
		$dataFim = Form::GetFormValue('dataFim');
 		$consultaRelatorio = $this->exemplar->RelatorioCnpqEmprestimo($dataInicio,$dataFim);

 		$res = $this->exemplar->RelatorioRetornaDatas($dataInicio,$dataFim);
		$x = 0;
		$tamanho = count($res);
		while ($res[$x] <> NULL)
		{
			$dadosRelatorio[$x][0] = substr($res[$x][0],8,2) . "/" . substr($res[$x][0],5,2) . "/" . substr($res[$x][0],0,4);
			$dadosRelatorio[$x][1] = $consultaRelatorio[$x][0];
			$dadosRelatorio[$x][2] = $consultaRelatorio[$x+$tamanho][0];
			$dadosRelatorio[$x][3] = $consultaRelatorio[$x+(2*$tamanho)][0];
			$dadosRelatorio[$x][4] = $consultaRelatorio[$x+(3*$tamanho)][0];
			$dadosRelatorio[$x][5] = $consultaRelatorio[$x+(4*$tamanho)][0];
			$dadosRelatorio[$x][6] = $consultaRelatorio[$x+(5*$tamanho)][0];
			$dadosRelatorio[$x][7] = $consultaRelatorio[$x+(6*$tamanho)][0];
			$dadosRelatorio[$x][8] = $consultaRelatorio[$x+(7*$tamanho)][0];
			$x++;
		}
		
		$cabecalho = array ("DATA","HUMANAS","SOCIAIS APLICADAS","EXATAS","BIOLOGICAS","SAUDE","AGRARIAS","TECNOLOGIA","LINGUISTICA");
		
		$report = new MezPDFReport($paper = 'a4', $orientation = 'landscape');

        $options['textCol'] = array(0,0,0);
        $options['shaded'] = 1;
        $options['fontSize'] = 10;
        $options['titleFontSize'] = 12;
    	
        $report->setFont('arial.afm');
		$hoje = date("d/m/Y");   
		$report->pdf->ezText(' ');
		$report->pdf->ezText(' ');
		$report->pdf->ezText('    IFF > INSTITUTO FEDERAL FLUMINENSE',15);
		$report->pdf->ezText('     SIGA > Sistema Integrado de Gestao Academica',13);
		$report->pdf->ezText(' ');
		
		$report->pdf->ezText("     Relatorio Analitico de Emprestimos, gerado em $hoje");
		$report->pdf->ezText(' ');
		$report->pdf->ezText(' ');

		$report->pdf->ezTable($dadosRelatorio,$cabecalho,' ',$options);
		$report->pdf->ezText(' ');
		$report->pdf->ezText(' ');

        	$report->execute();
    	}
  	
} 
?>
