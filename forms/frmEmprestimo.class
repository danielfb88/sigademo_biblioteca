	// pega os dados que estão no formuláio
	function GetData()
	{
		$data = new FormData();
		$data->cartaoacesso = $this->GetFormValue('edtCartaoAcesso');
		$data->nome = $this->GetFormValue('edtNome');
		$data->senha = $this->GetFormValue('edtSenha');
