// Daniel Bonfim - 18/10/2012
//MIOLO::Import('modules::controle::controls::linkempresa');
class gridMunicipio extends MDataGrid2 {

	function __construct() {
		global $MIOLO, $module, $page, $context, $self, $action, $perms, $state;

		// businnes
		$bussMunicipio = $MIOLO->GetBusiness('common', 'municipio');
		// query
		$query = $bussMunicipio->ListAll();

		// href
		$href_edit = $MIOLO->GetActionURL($module,$self,'%0%',Array('event'=>'btnConsulta:click'));
		$href_dele = $MIOLO->GetActionURL($module,$self,'%0%',Array('event'=>'btnExcluir:click'));

		// link
		//inkEmpresa = new LinkEmpresa('linkempresa','%0%');

		// colunas
		$columns = array(
		new DataGridColumn(null),
		new DataGridColumn('municipio','Municipio','left',true, '50%',true, null, true,true),
		new DataGridColumn('iduf','UF','center', true, '50%',true, null, true,true)
		);

		// paginação
		$href_datagrid = $MIOLO->GetActionURL($module,$self,'', Array('event'=>'btnList_click'));
		$page->SetAction($href_datagrid);
			
		// configurações do grid
		$this->SetFilter(false);
		$this->SetIndex(1);
		$this->SetLinkType('linkbutton');
		//his->SetTitle('Empresas');
		$this->width = '100%';
		$this->AddActionIcon('Editar', 'edit', $href_edit);
		$this->AddActionIcon('Excluir', 'delete.gif', $href_dele);
		//$this->HeaderLink('new', 'Novo Registro', $MIOLO->GetActionURL($module,'main:admin:municipioBiblioteca'));
		//$datagrid->HeaderLink('new', 'Novo Registro', $MIOLO->GetActionURL($module,$self,'',Array('event'=>'')));

		parent::__construct($query, $columns, $href_datagrid, 25);
		$this->EventHandler();

	}

	function GenerateFooter()
	{
		if (!$this->data) $footer[] = $this->GenerateEmptyMsg();
		return $footer;
	}

	function btnExcluir_click() {
		global $MIOLO, $module, $item, $action;

		// bussiness Municipio
		$bussMunicipio = $MIOLO->GetBusiness('common', 'municipio');

		$bussMunicipio->GetById($item);

		//$conf é a variável que confirma a exclusão do registro no momento
		//em que é questionado ao usuário se ele deseja relmente excluir o registro
		$conf = Form::GetFormValue('conf');

		if( $conf == 'sim') //Caso o usuário tenha escolhido a opção sim
		{
			try
			{
				$bussMunicipio->deleteById($item);
				$bussMunicipio->Log(OP_DEL,'Deletado o município '.$bussMunicipio->municipio.' com o id = '.$item);
				$MIOLO->prompt(Prompt::information($bussMunicipio->municipio . " deletado da base de dados", $MIOLO->GetActionURL($module,$action)));
			} catch(EMioloException $e)
			{
				$MIOLO->Error("As informações não foram deletadas. Existem editoras associadas a este município", $MIOLO->GetActionURL($module,$action));
			}
		}
		elseif( $conf == 'nao')
		{
			$MIOLO->prompt(Prompt::information('Exclusão cancelada.', $MIOLO->GetActionURL($module,$action)));
		} else
		{
			//Caso a variável não possua o valor "sim" ou "não" significa que ainda não lhe foi atribuído um valor,
			//ou seja, deve-se perguntar ao usuário se deseja realmente excluir o registro

			$msg = "Tem certeza que deseja realmente excluir o município " . $bussMunicipio->municipio . " ?";

			$action_sim = $MIOLO->getActionURL($module,'main:admin:municipioBibliotecaFind&event=btnExcluir:click',$bussMunicipio->idmunicipio, array('conf'=>'sim', 'item' => $item));
			$action_nao = $MIOLO->getActionURL($module,'main:admin:municipioBibliotecaFind&event=btnExcluir:click',$bussMunicipio->idmunicipio, array('conf'=>'nao'));

			$MIOLO->prompt(Prompt::question($msg, $action_sim, $action_nao));
		}
	}

	
	function btnConsulta_click() {
		global $MIOLO, $module, $item, $action, $page;

		//redireciona
		$go = $MIOLO->GetActionURL($module,'main:admin:municipioBiblioteca&event=btnConsulta:click', $item);
		$page->Redirect($go);
	}
}
