<?php
/**
* @package SIGA
* @subpackage Biblioteca
* @author SETEC/MEC
*/

class repResAtendidaBib extends PDFReport
{
	var $img;
	var $timestamp;
	var $objReserva;
	var $objUnidade;

	function __construct()
	{
		global $MIOLO, $module, $page, $context, $self, $action, $perms, $item;

	    $ui = $MIOLO->GetUI();
	    $this->img = $ui->GetImageSrc('logonet.png'); 

		$this->objUnidade = $MIOLO->GetBusiness($module,'unidade');

		$columns = array(
    		new PDFReportColumn('login','<b><i>Usuário</i></b>','center',true,12,true,null,true),
    		new PDFReportColumn('nome','<b><i>Nome</i></b>','left',false,19,true,null,true),
    		new PDFReportColumn('numerodotombo','<b><i>Exemplar</i></b>','center',true,15,true,null,true),
    		new PDFReportColumn('titulo','<b><i>Título</i></b>','left',false,18,true,null,true),
    		new PDFReportColumn('datahoradareserva','<b><i>Solicitação</i></b>','center',true,12,true,null, true),
    		new PDFReportColumn('datahoraentrada','<b><i>Entrada</i></b>','center',true,12,true,null,true),
    		new PDFReportColumn('datahoralimite','<b><i>Limite</i></b>','center',true,12,true,null,true),
	    );
       
		$this->objReserva = $MIOLO->GetBusiness($module,'reserva');
    	$query = $this->objReserva->ListReservaAtendidaBiblioteca($item);

//	    $query->SetOrder('nome');

		foreach($query->result as $row)
		{
			$data[] = $row;
		}

		parent::__construct($data,$columns,40);
	    $this->SetColumnAttr('login','index',0);
	    $this->SetColumnAttr('nome','index',1);
	    $this->SetColumnAttr('numerodotombo','index',2);
	    $this->SetColumnAttr('titulo','index',3);
	    $this->SetColumnAttr('datahoradareserva','index',4);
	    $this->SetColumnAttr('datahoraentrada','index',5);
	    $this->SetColumnAttr('datahoralimite','index',6);

//		$this->SetTitle('Reservas Atendidas por Biblioteca');
	    $this->SetOption('showTableTitle',0);
        $this->SetOption('fontSize',9);
		$this->SetOption('showLines',0);
	    $this->timestamp = date('d/m/Y');
	}
		
	function GeneratePageHeader()
	{   
		global $MIOLO, $module, $item;

		$h = $this->pdf->getFontHeight(12);
		$this->pdf->addText(510,800-$h,10,'Página: ' . $this->pn->pageNumber . '/' . $this->pn->pageCount);

		$x00=$this->pdf->left;
		$hh = $this->pdf->getFontHeight(12);
		$this->pdf->addText($x00, 800, 12, $this->manager->getConf('instituicao.sigla')." - ".$this->manager->getConf('instituicao.nome'));
		$this->pdf->addText($x00, 800 - $hh, 12, $this->manager->getConf('theme.system'));

/*    
		$this->pdf->ezImage($this->img,5,50,'none','left');
	    $this->pdf->addText(90,800,12,'UFJF - Universidade Federal de Juiz de Fora');

	    $this->pdf->addText(90,800-$h,12,'CGCO - Centro de Gestão do Conhecimento Organizacional');
	    $this->pdf->addText(90,800-$h-$h,12,'SIGA - Sistema Integrado de Gestão Acadêmica');
*/


		$this->pdf->addText(90,800-$h-$h-$h,12,'Módulo Biblioteca');
	    $this->pdf->ezSetY(800-$h-$h-$h-$h);

		$unidade = $this->objUnidade->GetByCodigo($item);

		$x0 = $this->pdf->left-5;
        $x1 = $this->pdf->right-5;
        $y = 800 - $h - $h - 30;

		$this->pdf->line($x0, $y, $x1, $y);
        $this->pdf->addText($this->pdf->left, $y - 13, 11, 'Reservas Atendidas - ' . $unidade->descricao);
        $this->pdf->line($x0, $y - 15, $x1, $y - 15);
	}
	
	function GeneratePageFooter()
	{
		$this->pdf->ezText($this->timestamp . '  ', 9, array('justification' => 'right'));
	}
}
?>
