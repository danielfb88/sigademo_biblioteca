    class repMultasPorPeriodo extends MPDFReport
    {
        var $timestamp;
        var $img;
        var $level = array();
        var $dataInicio;
        var $dataFim;
        var $total;
        var $aplicadas = array();
        var $recebidas = array();
        var $pendentes = array();
        var $perdoadas = array();

        function __construct($data)
        {
            global $MIOLO, $module, $page, $context, $self, $action, $perms;

            parent::__construct(NULL, NULL, 55);
            $this->dataInicio = $data->dataInicio.' 00:00:00';
            $this->dataFim = $data->dataFim.' 23:59:59';
            $total = 0;
            $multas = $MIOLO->GetBusiness($module, 'multa');
            $aplicadas = $multas->RelatorioMultasAplicadasPorPeriodo($this->dataInicio,$this->dataFim);
            $recebidas = $multas->RelatorioMultasRecebidasPorPeriodo($this->dataInicio,$this->dataFim);
            $pendentes = $multas->RelatorioMultaspendentesPorPeriodo($this->dataInicio,$this->dataFim);
            $perdoadas = $multas->RelatorioMultasPerdoadasPorPeriodo($this->dataInicio,$this->dataFim);
            
            //var_dump($aplicadas->result);
            $ui = $MIOLO->GetUI();
            $this->img = $ui->GetImageSrc('logonet.png','biblioteca');
            $this->timestamp = date('d/m/Y G:i');
            $this->pdf->ezStartPageNumbers(520, 800, 10, 'rigth', utf8_decode('Página: {PAGENUM}'));
            $this->pdf->ezSetMargins(100, 30, 30, 30);
            $this->GeneratePageHeader();
            $this->GeneratePageFooter();
            // Formata para tipo moeda R$###.###,##
            $cf = new MCurrencyFormatter();
//	    echo "O erro está aqui... (arquivo repMultasPorPeriodo.class)";
            $aplicadas->result[0][1] = $cf->formatWithSymbol($cf->toDecimal($aplicadas->result[0][1])); 
            $recebidas->result[0][1] = $cf->formatWithSymbol($cf->toDecimal($recebidas->result[0][1]));
            $pendentes->result[0][1] = $cf->formatWithSymbol($cf->toDecimal($pendentes->result[0][1]));  
            $perdoadas->result[0][1] = $cf->formatWithSymbol($cf->toDecimal($perdoadas->result[0][1]));
            
                
                    
            
                    

            // define as colunas da linha de detalhe
            $columns = array(
                new MPDFReportColumn('MULTAS', '<b><i>MULTAS</i></b>', 'left', false, 40, true),
                new MPDFReportColumn('VALOR', '<b><i>VALOR</i></b>', 'right', false, 40, true),
               
            );

     
            // define as colunas da linha de grupo (level1)
           

            // Largura do report, em %
            $this->SetWidth(100);
            $this->SetColumns($columns);
            $colDetail = $this->columns;
            
             
             // gera o report
             $this->GenerateGroupHeader(1, $this->level);
             $this->GenerateGroupHeader1(1, $this->level);
             $this->columns = $colDetail; 
             $this->GenerateData($aplicadas->result);
             $this->GenerateGroupHeader2(1, $this->level);
             $this->columns = $colDetail; 
             $this->GenerateData($recebidas->result);
             $this->GenerateGroupHeader3(1, $this->level);
             $this->columns = $colDetail; 
             $this->GenerateData($pendentes->result);
             $this->GenerateGroupHeader4(1, $this->level);
             $this->columns = $colDetail; 
             $this->GenerateData($perdoadas->result);
             $this->SetOption('showHeadings', 0);
             $this->SetOption('showLines', 1);
            
          
          
        }

        function GenerateGroupHeader()
        {
            $this->pdf->SetStrokeColor(0, 0, 0);
            $x0 = $this->pdf->left;
          
            $this->pdf->ezSetDy(-32, 'makeSpace');
            $y = $this->pdf->y;
            $this->pdf->addText($x0, $y + 19, 12, utf8_decode('Período: ' .$this->dataInicio.' à '.$this->dataFim.''));
           
          
        }
        function GenerateGroupHeader1()
        {
            $this->pdf->SetStrokeColor(0, 0, 0);
            $x0 = $this->pdf->left;
                      
            $this->pdf->ezSetDy(-16, 'makeSpace');
            $y = $this->pdf->y;
            $this->pdf->addText($x0, $y + 9, 10, '<b>Multas Aplicadas</b>');
           
          
        }
        function GenerateGroupHeader2()
        {
            $this->pdf->SetStrokeColor(0, 0, 0);
            $x0 = $this->pdf->left;
                      
            $this->pdf->ezSetDy(-32, 'makeSpace');
            $y = $this->pdf->y;
            $this->pdf->addText($x0, $y + 9, 10, '<b>Multas Recebidas</b>');
           
          
        }
        function GenerateGroupHeader3()
        {
            $this->pdf->SetStrokeColor(0, 0, 0);
            $x0 = $this->pdf->left;
                      
            $this->pdf->ezSetDy(-32, 'makeSpace');
            $y = $this->pdf->y;
            $this->pdf->addText($x0, $y + 9, 10, '<b>Multas Pendentes</b>');
           
          
        }
         function GenerateGroupHeader4()
        {
            $this->pdf->SetStrokeColor(0, 0, 0);
            $x0 = $this->pdf->left;
                      
            $this->pdf->ezSetDy(-32, 'makeSpace');
            $y = $this->pdf->y;
            $this->pdf->addText($x0, $y + 9, 10, '<b>Multas Perdoadas</b>');
           
          
        }

        function GeneratePageHeader()
        {
            $x0 = $this->pdf->left;
            $x1 = $this->pdf->right;
            $h = $this->pdf->getFontHeight(12);
            $header = $this->pdf->openObject();
            $this->pdf->saveState();

		$x00=$this->pdf->left;
		$hh = $this->pdf->getFontHeight(12);
		$this->pdf->addText($x00, 800, 12, $this->manager->getConf('instituicao.sigla')." - ".$this->manager->getConf('instituicao.nome'));
		$this->pdf->addText($x00, 800 - $hh, 12, $this->manager->getConf('theme.system'));


/*
            $this->pdf->addPngFromFile($this->img, $x0, 770, 50, 50);
            $this->pdf->addText($x0 + 60, 800, 12, 'UFJF - Universidade Federal de Juiz de Fora');
            $this->pdf->addText($x0 + 60, 800 - $h, 12, utf8_decode('CGCO - Centro de Gestão do Conhecimento Organizacional'));
            $this->pdf->addText($x0 + 60, 800 - $h - $h, 12, utf8_decode('SIGA - Sistema Integrado de Gestão Acadêmica - Módulo Biblioteca'));
*/  

          $y = 800 - $h - $h - 5;
            $this->pdf->SetColor(0.1,0.1,0.1);
            $this->pdf->filledRectangle($x0, $y-20, $x1-30, 16 );
            $this->pdf->SetColor(1,1,1);
            $this->pdf->addText($x0 + 5, $y - 16, 12, utf8_decode('RELATÓRIO DE MULTAS POR PERÍODO'));
            $this->pdf->restoreState();
            $this->pdf->closeObject();
            $this->pdf->addObject($header, 'all');
        }

        function GeneratePageFooter()
        {
            $x0 = $this->pdf->left;
            $x1 = $this->pdf->right;
            $footer = $this->pdf->openObject();
            $this->pdf->saveState();
            $this->pdf->SetStrokeColor(0, 0, 0);
            $this->pdf->line($x0, 28, $x1, 28);
            $this->pdf->addText($x0, 19, 9, $this->timestamp . ' - CGCO/DSI');
            $this->pdf->restoreState();
            $this->pdf->closeObject();
            $this->pdf->addObject($footer, 'all');
        }

        function GenerateData($data)
        {
        
        	$this->pdf->ezSetDy(-5);
            $this->SetData($data);
            $this->rawdata = $this->GenerateTableData();
            $this->GenerateBody($this->rawdata);
        }

        function Generate()
        {
            $this->SetOutput();
            $this->Execute();
        }
    }
?>
